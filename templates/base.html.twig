<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {# <link rel="stylesheet" href="assets/css/bootstrap.min.css"> #}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-success">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('home.index') }}">DDF Immobilien</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link {% if home is defined and home == 'active' %} active {% endif %}" aria-current="page" href="{{ path('home.index') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if all is defined and all == 'active' %} active {% endif %} " href="{{ path('getall.index') }}">Get all</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if unsold is defined and unsold == 'active' %} active {% endif %} " href="{{ path('getunsold.index') }}">Get unsold</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if sold is defined and sold == 'active' %} active {% endif %} " href="{{ path('getsold.index') }}">Get sold</a>
                            </li> 
                            <li class="nav-item">
                                <a class="nav-link {% if one is defined and one == 'active' %} active {% endif %} " href="{{ path('getproperty.index') }}">Get one</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if verkaufen is defined and verkaufen == 'active' %} active {% endif %} " href="{{ path('sell.index') }}">Verkaufen</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if verkaufen is defined and verkaufen == 'active' %} active {% endif %} " href="{{ path('property.allesverkaufen') }}">alles Verkaufen</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {% if verkaufen is defined and verkaufen == 'active' %} active {% endif %} " href="{{ path('property.zuruecksetzen') }}">alles zur√ºcksetzen</a>
                            </li>
                            {# <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Verkaufen
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="{{ path('require_property') }}">speichern</a></li>
                                    <li><a class="dropdown-item" href="{{ path('require_property') }}">abfragen</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('require_property') }}">Zufall Daten</a></li>
                                </ul>
                            </li> #}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
